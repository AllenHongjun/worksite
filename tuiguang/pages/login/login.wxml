<!--pages/login/login.wxml-->
<view class="container">
	<image src="../../assets/images/39buyu-logo.png" class="logo"></image>
	<van-cell-group class="form">
		<van-field value="{{ phone }}" label="手机号" placeholder="请输入手机号" error-message="手机号错误(为空时不显示)" border="{{ false }}" class="cell"/>
		<van-field value="{{ sms }}" center label="短信验证码" placeholder="请输入短信验证码" border="{{ false }}" use-button-slot>
			<van-button slot="button" size="small" type="primary">发送验证码</van-button>
		</van-field>
	</van-cell-group>
	<van-button size="large" class="button">大号按钮</van-button>
	<text class="tips">
		*未注册用户直接登录即可完成登录
	</text>
</view>